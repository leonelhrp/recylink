# Stage 1: Build
FROM node:22-alpine AS builder

WORKDIR /app

COPY package.json package-lock.json ./
RUN npm ci --ignore-scripts

COPY . .

ARG NX_API_URL
ENV NX_API_URL=$NX_API_URL

RUN npx nx build webEvents --configuration=production
RUN npx nx build web-host --configuration=production

# Stage 2: Serve with nginx
FROM nginx:alpine AS runner

COPY --from=builder /app/dist/apps/web-host /usr/share/nginx/html
COPY --from=builder /app/dist/apps/webEvents /usr/share/nginx/html/webEvents
COPY nginx.conf /etc/nginx/conf.d/default.conf

EXPOSE 80

CMD ["nginx", "-g", "daemon off;"]
